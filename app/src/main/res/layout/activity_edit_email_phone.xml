<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".activity.EditEmailPhoneActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layoutDirection="locale">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8dp"
                android:layoutDirection="locale"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/title"
                style="@style/titleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="45dp"
                android:layout_toEndOf="@+id/back_arrow"
                android:gravity="center"
                android:text="@string/profile" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:layout_above="@+id/saveBtn"
        android:padding="20dp">

        <TextView
            android:id="@+id/emailMobileText"
            style="@style/titleStyleMedium12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number" />

        <LinearLayout
            android:id="@+id/phoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColorHint="@color/gray_dark"
            android:layoutDirection="locale"
            android:layout_marginTop="20dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countryPicker"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:textDirection="locale"
                android:layoutDirection="locale"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:ccp_autoDetectCountry="true"
                app:ccp_contentColor="@color/black"
                app:ccp_textSize="10sp"/>

            <EditText
                android:id="@+id/phoneField"
                style="@style/addressTextStyle"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/editImage"
                android:background="@drawable/container_gray_stroke_1"
                android:enabled="false"
                android:fontFamily="@font/regular"
                android:hint="70707070"
                android:inputType="number"
                android:paddingVertical="2dp"
                android:paddingStart="14dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/emailField"
            style="@style/addressTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@drawable/container_gray_stroke_1"
            android:fontFamily="@font/regular"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingVertical="2dp"
            android:paddingStart="14dp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:text="@string/save"
        app:cornerRadius="12dp" />

</RelativeLayout>