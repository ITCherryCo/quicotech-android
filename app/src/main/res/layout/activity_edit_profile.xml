<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".activity.EditProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:layoutDirection="locale"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layoutDirection="locale"
                android:padding="8dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/title"
                style="@style/titleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="45dp"
                android:layout_toEndOf="@+id/back_arrow"
                android:gravity="center"
                android:text="@string/profile" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveBtn"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layoutDirection="locale"
                android:src="@drawable/profile_user"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

            <ImageView
                android:id="@+id/imageChoose"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/profileImage"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:layoutDirection="locale"
                android:src="@drawable/image" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fullNameText"
            style="@style/titleStyleMedium12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/full_name" />

        <EditText
            android:id="@+id/nameField"
            style="@style/addressTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/container_gray_stroke_1"
            android:fontFamily="@font/regular"
            android:hint="@string/full_name"
            android:paddingStart="14dp" />

        <TextView
            android:id="@+id/birthdateText"
            style="@style/titleStyleMedium12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/date_of_birth" />

        <EditText
            android:id="@+id/birthdayField"
            style="@style/addressTextStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/container_gray_stroke_1"
            android:cursorVisible="false"
            android:focusable="false"
            android:fontFamily="@font/regular"
            android:hint="Jan/01/1990"
            android:paddingVertical="2dp"
            android:paddingStart="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeMobileBtn"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/green"
            android:padding="12dp"
            android:text="@string/change_mobile_number"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeEmailBtn"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/orange"
            android:padding="12dp"
            android:text="@string/change_email_address"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changePasswordBtn"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/orange"
            android:padding="12dp"
            android:text="@string/change_password"
            app:cornerRadius="12dp" />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:text="@string/save"
        app:cornerRadius="12dp" />

</RelativeLayout>