<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/visaContainer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layoutDirection="locale"
        android:background="@drawable/container_gray_stroke_1"
        android:padding="15dp">

        <ImageView
            android:id="@+id/visaImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layoutDirection="locale"
            android:src="@drawable/visa" />

        <TextView
            android:id="@+id/dottedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/visaImage"
            android:inputType="textPassword"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:text="1111" />

        <TextView
            android:id="@+id/lastNmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/checkImage"
            android:layout_toEndOf="@+id/dottedText"
            android:text="123"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:textAllCaps="true"
            android:textColor="@color/gray_dark" />

        <ImageView
            android:id="@+id/checkImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:scaleType="fitXY"
            android:layoutDirection="locale"
            android:src="@drawable/check" />
    </RelativeLayout>

</RelativeLayout>