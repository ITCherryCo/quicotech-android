<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/registerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/register_image"
                android:layoutDirection="locale" />

            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/registerImage"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="37dp"
                android:fontFamily="@font/bold"
                android:layoutDirection="locale"
                android:text="@string/singup"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerImage"
                android:layout_marginTop="30dp"
                android:layoutDirection="locale"
                android:orientation="vertical"
                android:paddingStart="22dp"
                android:paddingEnd="22dp">

                <TextView
                    android:id="@+id/fullNameText"
                    style="@style/loginTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/fullNameField"
                    style="@style/loginInputFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/your_full_name"
                    android:inputType="textEmailAddress"
                    android:maxHeight="45dp"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/emailText"
                    style="@style/loginTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/email"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/emailField"
                    style="@style/loginInputFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:maxHeight="45dp"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/phoneNumberText"
                    style="@style/loginTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/phone_number"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxHeight="45dp"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryPicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:layoutDirection="locale"
                        android:textDirection="locale"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_contentColor="@color/black"
                        app:ccp_textSize="10sp" />

                    <EditText
                        android:id="@+id/phoneNumberField"
                        style="@style/loginInputFieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:background="@drawable/edit_text_border"
                        android:hint="@string/phone_number_example"
                        android:inputType="textEmailAddress"
                        android:maxHeight="45dp"
                        android:padding="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/passwordText"
                    style="@style/loginTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/password"
                    android:textAllCaps="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border"
                    android:layoutDirection="locale">

                    <EditText
                        android:id="@+id/password_field"
                        style="@style/loginInputFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/eyeImage"
                        android:background="@null"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:layoutDirection="locale"
                        android:maxHeight="45dp"
                        android:padding="12dp"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/eyeImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/hide_password"
                        android:textDirection="locale" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/confirmPasswordText"
                    style="@style/loginTitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/confirm_password"
                    android:textAllCaps="true" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_border"
                    android:layoutDirection="locale">

                    <EditText
                        android:id="@+id/confirmPasswordField"
                        style="@style/loginInputFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:layout_toStartOf="@+id/eyeImage2"
                        android:background="@null"
                        android:maxHeight="45dp"
                        android:padding="12dp" />

                    <ImageView
                        android:id="@+id/eyeImage2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/hide_password"
                        android:textDirection="locale" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#4B40D7"
                    android:layoutDirection="locale"
                    android:padding="14dp"
                    android:text="@string/register"
                    android:textColor="#fff"
                    android:textDirection="locale"
                    app:cornerRadius="12dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/haveAccountText"
                        style="@style/loginTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/have_account"
                        android:textColor="@color/black_dont_have_account" />

                    <TextView
                        android:id="@+id/loginText"
                        style="@style/loginTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/haveAccountText"
                        android:clickable="true"
                        android:text="@string/login"
                        android:textColor="@drawable/ripple_text_purple_gray" />

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>