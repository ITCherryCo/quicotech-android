<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShippingAddressListFragment">

<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@+id/toolbar">-->

<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/errorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:elevation="1dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/errorImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/empty_item"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/errorMsg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/emptyCartTextImage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:layoutDirection="locale"
                        android:text="@string/no_items_in_list"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/errorMsg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noItemsText"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layoutDirection="locale"
                        android:textDirection="locale"
                        android:textColor="@color/gray_dark"
                        android:text="@string/dont_have_shop_item"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tryAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/try_again"
                        android:textColor="@drawable/ripple_text_purple_gray"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startShoppingBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/start_shopping"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        style="@style/buttonStyle"
                        app:cornerRadius="12dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textDirection="locale"
                    android:layoutDirection="locale"/>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:shimmer_auto_start="false"
                    android:visibility="gone"
                    android:paddingTop="20dp"
                    android:layout_above="@+id/totalContainer"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:layoutDirection="locale"
                    app:shimmer_duration="1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <include layout="@layout/shimmer_loading_shipping_address" />
                        <include layout="@layout/shimmer_loading_shipping_address" />
                        <include layout="@layout/shimmer_loading_shipping_address" />
                        <include layout="@layout/shimmer_loading_shipping_address" />
                        <include layout="@layout/shimmer_loading_shipping_address" />

                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:id="@+id/addAddressContainer"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/ripple_white_gray_border_8"
                    android:elevation="4dp"
                    android:clickable="true"
                    android:layoutDirection="locale"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/addImage"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layoutDirection="locale"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_circle" />

                    <TextView
                        android:id="@+id/addNewAddressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/addImage"
                        android:layoutDirection="locale"
                        android:text="@string/add_new_address"
                        android:textColor="@color/gray_dark"
                        android:textDirection="locale"
                        android:fontFamily="@font/medium"
                        android:textSize="15sp" />
                </RelativeLayout>

            </LinearLayout>
<!--        </androidx.core.widget.NestedScrollView>-->
<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

</RelativeLayout>
