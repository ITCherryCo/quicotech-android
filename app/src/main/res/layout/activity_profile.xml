<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/profile"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_margin="20dp"
        android:layoutDirection="locale">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/laptop"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp"
            android:layoutDirection="locale"/>

        <ImageView
            android:id="@+id/vipImage"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignEnd="@+id/profileImage"
            android:elevation="1dp"
            android:layoutDirection="locale"
            android:src="@drawable/vip" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phoneNumber"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/editImage"
            android:layout_toEndOf="@+id/profileImage"
            android:layoutDirection="locale"
            android:text="Danielle Dh"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name"
            android:layout_alignEnd="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/editImage"
            android:layout_toEndOf="@+id/profileImage"
            android:text="+961 70707070"
            android:textColor="@color/gray"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/editImage"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignTop="@+id/name"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="1dp"
            android:layoutDirection="locale"
            android:src="@drawable/edit_profile" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/container_white_corner_15"
        android:elevation="5dp"
        android:orientation="vertical"
        android:textDirection="locale"
        android:layoutDirection="locale"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layoutDirection="locale"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cardImage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layoutDirection="locale"
                    android:src="@drawable/card_circle" />

                <TextView
                    android:id="@+id/cardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/card"
                    android:textDirection="locale"
                    android:layoutDirection="locale"                    android:textColor="@color/black"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shippingImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shipping_address"
                    android:layoutDirection="locale"/>

                <TextView
                    android:id="@+id/shippingAddressesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/shipping_addresses"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/doneOrderImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:src="@drawable/done_orders" />

                <TextView
                    android:id="@+id/doneOrdersText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/done_orders"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:textColor="@color/black"
                    android:textSize="11sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ongoingOrderImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:src="@drawable/ongoing_orders" />

                <TextView
                    android:id="@+id/ongoingOrdersText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/ongoing_orders"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:textSize="11sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/faqImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:src="@drawable/faq" />

                <TextView
                    android:id="@+id/faqText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/faq"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/termsImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:src="@drawable/terms" />

                <TextView
                    android:id="@+id/termsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/settingsImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="locale"
                    android:src="@drawable/settings" />

                <TextView
                    android:id="@+id/settingsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:layoutDirection="locale"
                    android:textSize="11sp" />

            </LinearLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>