<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/ripple_white_gray_border_8"
        android:elevation="3dp">

        <TextView
            android:id="@+id/visaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/passwordCode"
            android:text="@string/visa"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/passwordCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/code"
            android:inputType="textPassword"
            android:text="1111"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="231"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/visaText2"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_below="@+id/code"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/visa_image" />
    </RelativeLayout>
</RelativeLayout>