<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragment.AddressFragment">

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        style="@style/addressTextStyle"
        android:hint="@string/contact_name" />



    <EditText
        android:id="@+id/streetField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/street_example"
        style="@style/addressTextStyle"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/apartmentField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/apartment_example"
        style="@style/addressTextStyle"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/cityField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/city"
        style="@style/addressTextStyle"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/postalCodeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/postal_code"
        style="@style/addressTextStyle"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layoutDirection="locale">


        <TextView
            android:id="@+id/setDefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_default_shipping_address"
            style="@style/addressTextStyle"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layoutDirection="locale"/>
    </RelativeLayout>
</LinearLayout>