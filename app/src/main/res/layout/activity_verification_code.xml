<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VerificationCodeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layoutDirection="locale">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layoutDirection="locale"
                android:padding="8dp"
                android:src="@drawable/back_arrow"
                android:textDirection="locale" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="45dp"
                android:layout_toEndOf="@+id/back_arrow"
                style="@style/titleStyle"
                android:text="@string/verification"/>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layoutDirection="locale"
        android:padding="20dp">

        <TextView
            android:id="@+id/enterVerificationCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_verification_code"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:textDirection="locale"
            android:layoutDirection="locale"/>

        <TextView
            android:id="@+id/sendMsgText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/phone_confirmation_code"
            android:textColor="@color/gray_dark"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:textSize="16sp"
            android:fontFamily="@font/regular"/>

        <com.chaos.view.PinView
            android:id="@+id/pinview"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:cursorVisible="true"
            android:inputType="text"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:textStyle="bold"
            app:cursorColor="@color/black"
            app:cursorWidth="1dp"
            app:hideLineWhenFilled="false"
            app:itemCount="6"
            app:itemHeight="40dp"
            app:itemSpacing="10dp"
            app:itemWidth="40dp"
            app:lineColor="@color/gray_dark"
            app:lineWidth="1dp"
            app:viewType="rectangle" />


            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="00:00"
                android:textColor="@color/red_dark"
                android:textDirection="locale"
                android:layoutDirection="locale"
                android:textSize="16sp"
                android:fontFamily="@font/regular"/>

        <TextView
            android:id="@+id/resendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center"
            android:text="@string/resend_code"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:fontFamily="@font/regular"
            android:textColor="@drawable/ripple_text_purple_gray" />

        <TextView
            android:id="@+id/orText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/or"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="15dp"
            android:textDirection="locale"
            android:layoutDirection="locale"

            android:fontFamily="@font/regular"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/callText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center"
            android:text="@string/call"
            android:layout_marginTop="15dp"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textDirection="locale"
            android:layoutDirection="locale"
            android:textStyle="bold"
            android:fontFamily="@font/regular"
            android:textColor="@drawable/ripple_text_purple_gray" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/verify"
            android:layout_marginTop="30dp"
            style="@style/buttonStyle"
            app:cornerRadius="12dp" />

    </LinearLayout>
</LinearLayout>