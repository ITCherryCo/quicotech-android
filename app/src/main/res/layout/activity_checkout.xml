<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CheckoutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:layoutDirection="locale"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="45dp"
                android:layout_toEndOf="@+id/back_arrow"
                android:gravity="center"
                android:text="@string/checkout"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerContainer"
        android:layout_below="@+id/toolbar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/orderErrorContainer"
                    layout="@layout/error_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="150dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/mainContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <include
                        android:id="@+id/orderTracking"
                        layout="@layout/tracking_design" />

                    <include
                        android:id="@+id/orderAddress"
                        layout="@layout/address_in_order" />

                    <TextView
                        android:id="@+id/paymentMethodText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/bold"
                        android:layoutDirection="locale"
                        android:text="@string/payment_method"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/cashContainer"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/container_black_stroke_1"
                        android:layoutDirection="locale"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/cashImage"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layoutDirection="locale"
                            android:scaleType="fitCenter"
                            android:src="@drawable/cash_on_delivery1" />

                        <TextView
                            android:id="@+id/cashText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/cashImage"
                            android:fontFamily="@font/medium"
                            android:layoutDirection="locale"
                            android:text="@string/cash_on_delivery"
                            android:textColor="@color/gray_dark"
                            android:textDirection="locale" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/visaContainer"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/container_black_stroke_1"
                        android:layoutDirection="locale"
                        android:padding="15dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/visaImage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layoutDirection="locale"
                            android:src="@drawable/visa" />

                        <TextView
                            android:id="@+id/dottedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toEndOf="@+id/visaImage"
                            android:inputType="textPassword"
                            android:layoutDirection="locale"
                            android:text="1111"
                            android:textDirection="locale" />

                        <TextView
                            android:id="@+id/lastNmb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toStartOf="@+id/checkImage"
                            android:layout_toEndOf="@+id/dottedText"
                            android:fontFamily="@font/regular"
                            android:layoutDirection="locale"
                            android:text="123"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textDirection="locale" />

                        <ImageView
                            android:id="@+id/checkImage"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layoutDirection="locale"
                            android:scaleType="fitXY"
                            android:src="@drawable/check"
                            android:textDirection="locale" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="25dp"
                        android:alpha="0.3"
                        android:background="@color/gray_dark"
                        android:elevation="0.1dp" />

                    <LinearLayout
                        android:id="@+id/orderSummary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/orderSummaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/bold"
                            android:layoutDirection="locale"
                            android:text="@string/order_summary"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/serviceDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/regular"
                            android:layoutDirection="locale"
                            android:textColor="@color/gray_dark"
                            android:textDirection="locale"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layoutDirection="locale" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:visibility="gone" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light"
        android:layoutDirection="locale"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/totalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/confirmBtn"
            android:background="@color/white"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/total"
                android:fontFamily="@font/bold"
                android:layoutDirection="locale"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/bold"
                android:text="$45.2"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmBtn"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:text="@string/confirm_and_pay"
            app:cornerRadius="12dp" />
    </LinearLayout>

</RelativeLayout>