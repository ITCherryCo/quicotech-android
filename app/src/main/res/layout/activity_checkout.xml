                    <com.kofigyan.stateprogressbar.StateProgressBar
                        android:id="@+id/stateProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:spb_animateToCurrentProgressState="false"
                        app:spb_checkStateCompleted="true"
                        app:spb_currentStateDescriptionColor="@color/black"
                        app:spb_currentStateNumber="three"
                        app:spb_maxStateNumber="four"
                        app:spb_stateBackgroundColor="@color/gray_step"
                        app:spb_stateDescriptionColor="@color/black"
                        app:spb_stateDescriptionSize="10sp"
                        app:spb_stateForegroundColor="@color/color_primary_purple"
                        app:spb_stateLineThickness="7dp"
                        app:spb_stateNumberForegroundColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/requestReceivedText1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:layoutDirection="locale"
                            android:text="@string/request_received"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/waitingResponseText1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:layoutDirection="locale"
                            android:text="@string/packaging"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/inProgressText1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:layoutDirection="locale"
                            android:text="@string/on_the_way"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/completedText1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:layoutDirection="locale"
                            android:text="@string/delivered"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginTop="25dp"
                        android:alpha="0.3"
                        android:background="@color/gray_dark"
                        android:elevation="0.1dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/addressInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="105dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@+id/mapImage"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addressName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:layoutDirection="locale"
                            android:text="Home"
                            android:textColor="@color/black"
                            android:textDirection="locale"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/userAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/regular"
                            android:maxLines="2"
                            android:text="Lebanon, City , state - province, street, building, apartment
, office.."
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:layoutDirection="locale"
                            android:text="+961 70707070"
                            android:textColor="@color/gray_dark"
                            android:textDirection="locale"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/mapImage"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layoutDirection="locale"
                        android:src="@drawable/map" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.3"
                    android:background="@color/gray_dark"
                    android:elevation="0.1dp" />

                <TextView
                    android:id="@+id/paymentMethodText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/bold"
                    android:layoutDirection="locale"
                    android:text="@string/payment_method"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/cashContainer"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/container_black_stroke_1"
                    android:layoutDirection="locale"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/cashImage"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layoutDirection="locale"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cash_on_delivery1" />

                    <TextView
                        android:id="@+id/cashText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/cashImage"
                        android:fontFamily="@font/medium"
                        android:layoutDirection="locale"
                        android:text="@string/cash_on_delivery"
                        android:textColor="@color/gray_dark"
                        android:textDirection="locale" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/visaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/container_black_stroke_1"
                    android:layoutDirection="locale"
                    android:padding="15dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/visaImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layoutDirection="locale"
                        android:src="@drawable/visa" />

                    <TextView
                        android:id="@+id/dottedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/visaImage"
                        android:inputType="textPassword"
                        android:layoutDirection="locale"
                        android:text="1111"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/lastNmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@+id/checkImage"
                        android:layout_toEndOf="@+id/dottedText"
                        android:fontFamily="@font/regular"
                        android:layoutDirection="locale"
                        android:text="123"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/checkImage"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layoutDirection="locale"
                        android:scaleType="fitXY"
                        android:src="@drawable/check"
                        android:textDirection="locale" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginTop="25dp"
                    android:alpha="0.3"
                    android:background="@color/gray_dark"
                    android:elevation="0.1dp" />

                <LinearLayout
                    android:id="@+id/orderSummary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/orderSummaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/bold"
                        android:layoutDirection="locale"
                        android:text="@string/order_summary"
                        android:textColor="@color/black"
                        android:textDirection="locale"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/serviceDetailsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/regular"
                        android:layoutDirection="locale"
                        android:textColor="@color/gray_dark"
                        android:textDirection="locale"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layoutDirection="locale" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:visibility="gone" />

            </LinearLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light"
        android:layoutDirection="locale"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/totalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/confirmBtn"
            android:background="@color/white"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/total"
                android:fontFamily="@font/bold"
                android:layoutDirection="locale"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/bold"
                android:text="$45.2"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmBtn"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:text="@string/confirm_and_pay"
            app:cornerRadius="12dp" />
    </LinearLayout>

</RelativeLayout>